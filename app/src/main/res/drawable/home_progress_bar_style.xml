<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <!-- radius background of progressbar -->
            <!--<corners android:radius="20dip" />-->
            <gradient
                android:startColor="@color/darker_gray"
                android:centerColor="@color/darker_gray"
                android:endColor="@color/darker_gray"
                />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <!-- radius of secundary progress -->
                <!--<corners
                    android:radius="20dip" />-->
                <gradient
                    android:startColor="@color/home_progress_starting_color"
                    android:centerColor="@color/home_progress_middle_color"
                    android:endColor="@color/home_progress_ending_color"
                    />
            </shape>
        </clip>
    </item>

</layer-list>