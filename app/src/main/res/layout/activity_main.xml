<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        card_view:layout_constraintBottom_toTopOf="@+id/linearLayout"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:background="@color/login_info_bgcolor"
        android:orientation="horizontal"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/txtlogin_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="15dp"
            android:text="@string/logn_info"
            android:textColor="@color/info_text_color"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="25dp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/bv_card1"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="8dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/bv_socks"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bv_socks_shadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/bvprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />

        <LinearLayout
            android:id="@+id/bv1linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="122dp"
            android:background="@color/card1_text_bkg_color"
            android:orientation="vertical"
            android:weightSum="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/bvCardHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/basic_vocab_card_title"
                android:textColor="@color/info_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bvCardDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.23"
                android:text="@string/basic_vocab_card1_content"
                android:textColor="@color/info_text_color"
                android:textSize="10sp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="81dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="@string/action_practice"
                android:textColor="#444"
                android:textSize="10sp"
                android:textStyle="bold"
                 />

            <Button
                android:id="@+id/button"
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="@string/action_quiz"
                android:textColor="@color/info_text_color"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/iv_card1"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/bv_card1"
        card_view:layout_constraintVertical_bias="0.050000012"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/iv_bicycle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iv_bicycle_shadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/ivprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />
        <LinearLayout
            android:id="@+id/iv1linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="122dp"
            android:background="@color/card3_text_bkg_color"
            android:orientation="vertical"
            android:weightSum="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/ivCard1Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/inter_vocab_card_title"
                android:textColor="@color/info_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ivCard1Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.23"
                android:text="@string/inter_vocab_card1_content"
                android:textColor="@color/info_text_color"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:id="@+id/iv_practice_btn"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_practice"
                    android:textColor="#B86"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/iv_quiz_btn"
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_quiz"
                    android:textColor="#38C"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/bv_card2"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintLeft_toRightOf="@+id/bv_card1"
        card_view:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/bv_shoes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:src="@drawable/bv_shoess_hadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/bvprogressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />

        <LinearLayout
            android:id="@+id/bv2linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="122dp"
            android:background="@color/card2_text_bkg_color"
            android:orientation="vertical"
            android:weightSum="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/bvCard2Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/basic_vocab_card_title"
                android:textColor="@color/info_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bvCard2Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.23"
                android:text="@string/basic_vocab_card2_content"
                android:textColor="@color/info_text_color"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:id="@+id/bv2_practice_btn"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_practice"
                    android:textColor="#766"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/bv2_quiz_btn"
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_quiz"
                    android:textColor="@color/info_text_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/iv_card2"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintLeft_toRightOf="@+id/iv_card1"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/bv_card2"
        card_view:layout_constraintVertical_bias="0.050000012"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1">

        <ImageView
            android:id="@+id/iv_scooter"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iv_scooter_shadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/ivprogressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />

        <LinearLayout
            android:id="@+id/iv2linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="122dp"
            android:background="@color/card4_text_bkg_color"
            android:orientation="vertical"
            android:weightSum="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/ivCard2Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/inter_vocab_card_title"
                android:textColor="@color/info_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ivCard2Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.23"
                android:text="@string/inter_vocab_card2_content"
                android:textColor="@color/info_text_color"
                android:textSize="10sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:id="@+id/iv2_practice_btn"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_practice"
                    android:textColor="@color/info_text_color"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/iv2_quiz_btn"
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="@string/action_quiz"
                    android:textColor="#cea75c"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/adv_card"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_card1"
        card_view:layout_constraintVertical_bias="0.050000012"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/adv_bicycle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iv_bicycle_shadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/advprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/adv_card2"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintLeft_toRightOf="@+id/adv_card"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_card1"
        card_view:layout_constraintVertical_bias="0.050000012"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1">

        <ImageView
            android:id="@+id/adv_scooter"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iv_scooter_shadow"
            tools:ignore="VectorDrawableCompat" />

        <ProgressBar
            android:id="@+id/advprogressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="118dp"
            android:background="@color/progress_starting_color" />

    </android.support.v7.widget.CardView>

  </android.support.constraint.ConstraintLayout>
</ScrollView>