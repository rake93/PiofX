<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_level_complete"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_95"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FF6B58"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">
            <Button
                android:id="@+id/section_complete_quiz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:text="@string/level_complete"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:textSize="@dimen/sp_14"
                android:elevation="@dimen/dp_8"
                android:background="?attr/selectableItemBackground"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_centerHorizontal="true"
        android:src="@drawable/brain_red"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_20"/>
</RelativeLayout>