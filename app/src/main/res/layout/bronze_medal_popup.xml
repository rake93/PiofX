<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#BFFFFFFF">

    <ImageView
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:src="@drawable/bronze_medal"
        android:layout_marginTop="@dimen/dp_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">

        <com.firstacademy.piofx.fonts.openSans.OpenSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bronze_text"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="center"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/login_bg_color">
                <Button
                    android:id="@+id/bronze_retake_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/retake_quiz"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:elevation="@dimen/dp_8"
                    android:background="?attr/selectableItemBackground"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/card3_image_bg_color">
                <Button
                    android:id="@+id/bronze_may_be_later"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/may_be_later"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:elevation="@dimen/dp_8"
                    android:background="?attr/selectableItemBackground"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>